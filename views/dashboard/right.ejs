    <div class="right-main-info">
      <div class="user-info">
        <p id="username"><%= user.username %></p>
        <p id="rank"><%= rankConverter(user.userRank) %></p>
      </div>
      <img src="/media/icons/profile-image.svg" alt="" id="profile-image" />
    </div>

    <ul class="right-main-items">
      <li class="right-main-item">
        <a href="/dashboard">داشبورد</a>
      </li>

      <% if(user.userRank == "moderator" || user.userRank == "super moderator"
      || user.userRank == "developer" || user.userRank == "owner"){ %>

      <li class="right-main-item">
        <a href="/moderators/dashboard">پنل مدیریت</a>
      </li>
      <% } %> <% if(user.userRank == "super moderator" || user.userRank ==
      "developer" || user.userRank == "owner"){ %>
