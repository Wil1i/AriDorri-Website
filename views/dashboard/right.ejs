        <a href="/dashboard/users">مدیریت کاربران</a>
      </li>
      <% } %>

      <li class="right-main-item">
        <a href="/dashboard/messages">پیام ها</a>
      </li>

      <li class="right-main-item">
        <a href="/dashboard/strikes">هشدار ها</a>
      </li>

